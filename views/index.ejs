<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Usuarios</title>
</head>
<body>
    <h1>Lista de Usuarios</h1>
    <a href="/add">Agregar Usuario</a>
    <table>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Edad</th>
            <th>Acciones</th>
        </tr>
        <% users.forEach(user => { %>
        <tr>
            <td><%= user.id_usuario %></td>
            <td><%= user.nombre %></td>
            <td><%= user.apellido %></td>
            <td><%= user.edad %></td>
            <td>
                <a href="/edit/<%= user.id_usuario %>">Editar</a>
                <a href="/delete/<%= user.id_usuario %>">Eliminar</a>
            </td>
        </tr>
        <% }) %>
    </table>
</body>
</html>
